<div class="container">
  <div class="row text-center">
    <h4>Trip Name</h4>
    <%= simple_form_for @trip do |f| %>
      <div class="col-sm-12 col-md-4">
        <%= f.input :name, label: false, placeholder: "Ex: Summer Holidays", style: "align-center" %>
      </div>
      <h4>Destinations</h4>
    <%= f.fields_for :destinations do |ff| %>
      <% 3.times do |i| %>        
        <div class="destination" style="display: <%= i.zero? ? 'block' : 'none' %>;">
          <div class="col-sm-12 col-md-4" >
            <%= ff.input :city, label: false, placeholder: "City Name",  input_html: { name: "trip[destinations][][city]", id: "search_#{i}" , class: "algolia"} %>
          </div> 
        </div>
      <% end %>
    <% end %>
      <div class="col-sm-12 col-md-4" style="text-align: center">
        <button type="button" class="btn btn-primary new-trip" id="add-extra-field">+</button>
        <button type="button" class="btn btn-primary new-trip" id="remove-extra-field">-</button>
        <br>
        <%= f.submit "Create your trip", class: "btn btn-primary new-trip-submit" %>
      </div>
    <% end %>
  </div>
</div>






