<div class="banner" style="background-image: linear-gradient(-225deg, rgba(241, 188, 82, 0.35)0%, rgba(241, 188, 82, 0.35)100%), url('<%= image_path("background-home.png") %>');">
  <div class="container">
   <div class="row">
    <div class="col-sm-12 col-md-4">
     <div class="home-content">
      <h1>WeGo2gether</h1>
      <p style="font-size: 20px">Your next group trip starts here</p>
    </div>
      <%= link_to "Create a group trip", new_trip_path, class: "btn btn-treehouse"  %>
  </div>


</div>
</div>
</div>

<div class="container">

<% UserTrip.all.order("created_at DESC").each do |user_trip| %>
  <% next unless user_trip.user %>
  <% next unless user_trip.trip %>

  <% url = "/trips/#{user_trip.trip_id}/user_trips/#{user_trip.user_id}" %>
  <br>
  <br>
  <div>
  <a href="<%= url %>">Invit for <%= user_trip.user.phone_number %> (trip: <%= user_trip.trip.name %>)</a>
  </div>
  <br>
<% end %>

</div>
